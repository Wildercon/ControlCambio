<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppControlCambio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppControlCambio"
    
    Shell.FlyoutBehavior="Disabled">

    

    <TabBar>
        
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Icon="house.svg"
        />
        <ShellContent
         Title="Cuentas"
        ContentTemplate="{DataTemplate local:Pages.Account}"
        Route="Page/Account" 
        Icon="list.svg"
        />
        <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Pages.Login}"
        Route="Page/Login" 
        Icon="user.svg"
        />
    </TabBar>

</Shell>
